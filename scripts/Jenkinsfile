pipeline {
    agent any
    environment {
        SECRET_KEY = credentials('DATABASE_URI')
        DATABASE_URI = credentials('SECRET_KEY')
        APP_RUN = True
    }

    stages {
        stage('Build') {
            steps {
                sudo apt install python3-venv -y
                python3 -m venv venv
                . ./venv/bin/activate
                pip3 install -r requirements.txt
            }
        }
        stage('Test') {
            steps {
                python3 -m pytest --junitxml unittests.xml
                python3 -m pytest --cov-report xml:coverage.xml 

            }
        }
        stage('Deploy') {
            steps {
                if APP_RUN == true: {
                python3 create.py
                python3 app.py
                }
            }
        }
        stage('post build') {
            steps{
                junit 'unittest.xml'
                cobertura(
                    coberturaREportFile: 'coverage.xml'
                )
            }
        }
    }   
}
