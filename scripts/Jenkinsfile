pipeline {
    agent any
    environment {
        SECRET_KEY = credentials('DATABASE_URI')
        DATABASE_URI = credentials('SECRET_KEY')
    }

    stages {
        stage('Build') {
            steps {
                sh """sudo apt install python3-venv -y
                python3 -m venv venv
                . ./venv/bin/activate
                pip3 install -r requirements.txt"""
            }
        }
        stage('Test') {
            steps {
                sh""" 
                . ./venv/bin/activate
                python3 -m pytest --junitxml unittests.xml
//              python3 -m pytest --cov-report term xml:coverage.xml
                """ 
            }
        }
        stage('Deploy') {
            steps {
                sh """
                . ./venv/bin/activate
                python3 create.py
                python3 app.py"""
            }
        }
        stage('post build') {
            steps{
                junit 'unittest.xml'
                cobertura coberturaReportFile: 'coverage.xml'
            }
        }
    }   
}
