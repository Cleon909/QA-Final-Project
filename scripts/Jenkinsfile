pipeline {
    agent any
    environment {
        SECRET_KEY = credentials('SECRET_KEY')
        DATABASE_URI = credentials('DATABASE_URI')
        APP_RUN = "False"
    }

    stages {
        stage('Build') {
            steps {
                sh """sudo apt install python3-venv -y
                python3 -m venv venv
                . ./venv/bin/activate
                pip3 install -r requirements.txt"""
            }
        }
        stage('Test') {
            steps {
                sh""" 
                . ./venv/bin/activate
                python3 -m pytest --junitxml unittests.xml
                """ 
            }
        }
        stage('Deploy') {
            steps {
                script{
                if (APP_RUN == "True") {
                    sh """
                    . ./venv/bin/activate
                    python3 create.py
                    python3 app.py"""
                    }
                }
            }
        }
        stage('post build') {
            steps{
                junit 'unittest.xml'
            }
        }
    }   
}
